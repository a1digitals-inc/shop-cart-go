create database shopcart;

use shopcart;

create table category (categoryID INT PRIMARY KEY, categoryName varchar(255));

create table products (productID INT PRIMARY KEY, productName varchar(255), quantity INT,categoryID INT, FOREIGN KEY (categoryID) REFERENCES category (categoryID) ON DELETE CASCADE);

create table users (userID INT PRIMARY KEY, firstName varchar(255), lastname varchar(255), username varchar(255), password varchar(255),creation_time TIMESTAMP, modified_time TIMESTAMP, deletion_time TIMESTAMP, status varchar(255));

create table sessions (sid varchar(255) PRIMARY KEY, userID INT,creation_time TIMESTAMP, modified_time TIMESTAMP, FOREIGN KEY (userID) REFERENCES users (userID) ON DELETE CASCADE );

create table list (listID INT PRIMARY KEY, userID INT, listTitle varchar(255), creation_time TIMESTAMP, modified_time TIMESTAMP,deletion_time TIMESTAMP,status varchar(255), FOREIGN KEY (userID) REFERENCES users (userID) ON DELETE CASCADE );

create table listDetails (listDetailID INT PRIMARY KEY, productID INT,productName varchar(255), listTitle varchar(255),creation_time TIMESTAMP, modified_time TIMESTAMP,deletion_time TIMESTAMP,modifiedBy varchar(255), FOREIGN KEY (productID) REFERENCES products (productID) ON DELETE CASCADE);